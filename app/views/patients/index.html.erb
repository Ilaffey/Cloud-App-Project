<p id="notice"><%= notice %></p>

<h1>Patients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contactnumber</th>
      <th>Dob</th>
      <th>Condition</th>
      <th>Doctor</th>
      <th>Currentroom</th>
      <th>Patiententrydate</th>
      <th>Patientdeparturedate</th>
      <th>Recordlastupdated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.contactNumber %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.condition %></td>
        <td><%= patient.Doctor %></td>
        <td><%= patient.currentRoom %></td>
        <td><%= patient.patientEntryDate %></td>
        <td><%= patient.patientDepartureDate %></td>
        <td><%= patient.RecordlastUpdated %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

